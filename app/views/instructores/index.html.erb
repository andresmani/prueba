<%- model_class = Instructor -%>
<div class="page-header">
   <br>
  <br>
  <h1>Instructores de la Materia  <%= @materia.nombre %> </h1>
   
   <%= form_tag request.path, :method => 'get' do %>
    Datos a Buscar:
    <div class="input-append">
      <%= search_field_tag :search, params[:search], options ={:placeholder => "Nombre,Cedula,Email,Direccion,Telefono"}%>
        <%= submit_tag "Consultar", :class => "btn btn-inverse", :name => nil %>
    </div>
    <p>numero de registros:
   <p><%= text_field_tag :registro, params[:registro], options={:class=>"span1"} %></p>
   <%= hidden_field_tag :direction, params[:direction] %>
  <%= hidden_field_tag :sort, params[:sort] %>
    <% end %>
    <br>
</div>
<table class="table table-striped table-bordered table-condensed pretty">
  <thead>
      <th>Imagen</th>
      <th><%= sortable "nombre" %></th>
      <th><%= sortable "apellido" %></th>
      <th><%= sortable "cedula" %></th>
      <th><%= sortable "materia" %></th>
      <th><%= sortable "email" %></th>
      <th><%= sortable "direccion" %></th>
      <th><%= sortable "telefono" %></th>
    <th>Acciones</th>           
    </tr>
  </tr>
  </thead>
  <tbody>
     <%= render @instructores %>
  </tbody>
</table>
<td><%= link_to 'Nuevo Instructor', new_materia_instructor_path, :class => "btn btn-primary btn-mini", :remote => true %>
</td>
<td><%= link_to "Materia", materias_path , :class => 'btn btn-mini btn-inverse' %></td>
</tr>
<div class="pagination pagination-centered">
  <ul>
    <%= will_paginate @instructores, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente
    &raquo;' %>
  </ul>
  <p>
    <td>Total Instuctores :<input type="text"  id="totalregs" class="span1" value="<%= @instructores.total_entries %>" readonly />
  </p>
</div>
