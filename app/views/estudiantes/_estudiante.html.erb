<tr id=<%= "estudiante_#{estudiante.id}" %>>
  <td><%= estudiante.nombre %></td>
  <td><%= estudiante.apellido %></td>
  <td><%= estudiante.cedula %></td>
  <td><%= estudiante.telefono %></td>
  <td><%= estudiante.email %></td>
  <td><%= estudiante.direccion %></td>
  <td><%= estudiante.curso.nombre %></td>
  
  <td>
  <%= link_to "Inormacion", curso_estudiante_path(@curso,estudiante), :remote => true, :class => 'btn btn-info btn-mini' %>

  <%= link_to "Editar", edit_curso_estudiante_path(@curso,estudiante), :remote => true, :class => 'btn btn-danger btn-mini' %>
  
  <%= link_to "eliminar", curso_estudiante_path(@curso, estudiante), 
  :data => { :confirm => 'Esta Seguro?' },
  :method => :delete, :remote => true, :class => 'btn btn-mini btn-warning' %>
  </td>
</tr>


 